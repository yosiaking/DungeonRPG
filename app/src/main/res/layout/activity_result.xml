<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brown"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sample.dungeonrpg.ExploreActivity">


    <TextView
        android:id="@+id/resultHeroName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="名前"/>

    <TextView
        android:id="@+id/resultJewelCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="宝石"/>

    <TextView
        android:id="@+id/resultFloorCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="階段"/>

    <TextView
        android:id="@+id/resultDistanceCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="距離"/>

    <Button
        android:id="@+id/onceMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="もう一度プレイする"/>

</LinearLayout>
