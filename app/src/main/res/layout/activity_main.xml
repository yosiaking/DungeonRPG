<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_brown"
    tools:context="com.example.sample.dungeonrpg.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="left">


        <ImageView
            android:id="@+id/heroImage"
            android:src="@drawable/hero"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/heroName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:textSize="@dimen/menu_text_size"
            android:text="名前"
            android:textColor="@color/statusText"/>

        <TextView
            android:id="@+id/heroH"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="H"
            android:textColor="@color/statusText"/>


        <TextView
            android:id="@+id/heroHp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="100／100"
            android:textColor="@color/statusText"/>


        <TextView
            android:id="@+id/heroM"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="M"
            android:textColor="@color/statusText"/>


        <TextView
            android:id="@+id/heroMp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="100／100"
            android:textColor="@color/statusText"/>


        <TextView
            android:id="@+id/heroJ"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="宝"
            android:textColor="@color/statusText"/>


        <TextView
            android:id="@+id/jewelCount"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="10"
            android:textColor="@color/statusText"/>

        <TextView
            android:id="@+id/heroF"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="階"
            android:textColor="@color/statusText"/>

        <TextView
            android:id="@+id/floorCount"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@color/statusText"/>

        <TextView
            android:id="@+id/heroD"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/menu_text_size"
            android:text="進"
            android:textColor="@color/statusText"/>

        <TextView
            android:id="@+id/distanceCount"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="@dimen/menu_text_size"
            android:textColor="@color/statusText"/>

    </LinearLayout>




    <ScrollView
        android:id="@+id/storyScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginTop="10dp"
        android:background="@drawable/dungeon001"
        >


        <LinearLayout

            android:id="@+id/storyTellingLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/go"
            android:text="すすむ"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/unable_button_selecter"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/attack"
            android:text="たたかう"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/unable_button_selecter"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/magic"
            android:text="まほう"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/unable_button_selecter"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="@dimen/button_margin"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/recover"
            android:text="いのる"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/unable_button_selecter"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="@dimen/button_margin"/>


        <Button
            android:id="@+id/scare"
            android:text="おどかす"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/unable_button_selecter"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="@dimen/button_margin"/>

        <Button
            android:id="@+id/escape"
            android:text="ぬけだす"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/unable_button_selecter"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="@dimen/button_margin"/>


    </LinearLayout>
</LinearLayout>
